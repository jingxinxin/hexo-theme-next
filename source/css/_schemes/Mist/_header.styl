// Header
// --------------------------------------------------
.header { background: $whitesmoke; }
.header-inner {
  //padding: 25px 0 20px;
  padding: 38px 0 38px;
  clearfix();

  +mobile() {
    text-align:center; //手机下 博客名字居中
    width: auto;
    margin-bottom: 50px;
    padding: 10px;
  }
}

.site-meta {
  //float: left;        //打算居中显示
  //margin-left: 32px;  //原值-20px 优化位置，打算居中显示
  line-height: normal;

  +mobile() {  //修改手机下博客名字居中效果
    float:none;
    display:inline-block;
    margin-left: 38px;
  }

  .brand {
    padding: 2px 1px;
    background: none;

    +mobile() { display: block; }
  }

  .logo { display: none; }

  .site-title {
    font-size: 22px;
    font-weight: bolder;

    +mobile() { line-height: 34px; }
  }
}


.logo-line-before,
.logo-line-after {
  display: block;
  overflow: hidden;
  margin: 0 auto;
  width: 75%;

  +mobile() { display: none; }

  i {
    position: relative;
    display: block;
    height: 2px;
    background: $black-deep;
    +mobile() { height: 3px; }
  }
}

.use-motion {
  .logo-line-before i { left: -100%; }
  .logo-line-after i { right: -100%; }
}
